<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mrrossy.cvdtestapp.StartActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:id="@+id/matricTextView"
        android:text="@string/matricrequest"
        android:textSize="36sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="49dp"
        android:id="@+id/matricEnterEditText"
        android:layout_below="@+id/matricTextView"
        android:layout_centerHorizontal="true"
        android:maxLength="8"
        tools:maxLength="8"
        android:textSize="24sp" />

    <Button
        android:text="@string/enterbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/btnEnterMatric"
        android:textSize="24sp"
        android:layout_below="@+id/matricEnterEditText"
        android:layout_centerHorizontal="true"
        android:onClick="checkMatric" />
</RelativeLayout>
